@model TechnicalTestProject.Models.CompleteBasketModel

@{
    ViewData["Title"] = "Home Page";
}

    <div>
        <h1 class="display-4 text-center">Fish and Chip Shop</h1>
        <form asp-action="UpdateBasket" method="post">
            <div class="col-xl-12 row modal-header">
                <div class="col-xl-3">Product</div>
                <div class="col-xl-3">Default Price</div>
                <div class="col-xl-3">Quantity To Add</div>
                <div class="col-xl-3">Expiry Warning</div>
            </div>
            <div class="col-xl-12 row">
                <div class="col-xl-3">
                    @(Model.Chips.Product.ProductName)
                </div>
                <div class="col-xl-3">
                    £@(Model.Chips.Product.Price.ToString("F"))
                </div>
                <div class="col-xl-3">
                    <input asp-for="@Model.Chips.Product.Quantity" type="number" class="form-control round-corners" />
                    <span asp-validation-for="@Model.Chips.Product.Quantity" class="text-danger"></span>
                </div>
            </div>
            <div class="col-xl-12 row">
                <div class="col-xl-3">
                    @(Model.Pies.Product.ProductName)
                </div>
                <div class="col-xl-3">
                    £@(Model.Pies.Product.Price.ToString("F"))
                </div>
                <div class="col-xl-3">
                    <input asp-for="@Model.Pies.Product.Quantity" type="number" class="form-control round-corners" />
                    <span asp-validation-for="@Model.Pies.Product.Quantity" class="text-danger"></span>
                </div>
                <div class="col-xl-3">
                    <input hidden asp-for="@Model.Pies.Product.ExpiryDate" class="form-control round-corners" />
                    <span asp-validation-for="@Model.Pies.Product.ExpiryDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-xl-12 row">
                <div class="col-xl-6"></div>
                <div class="col-xl-3">
                    <div class="card-body no-padding">
                        <input type="submit" value="Save To Basket" class="btn-outline-dark" />
                    </div>

                </div>
            </div>
            <input hidden asp-for="@Model.CurrentNumberOfChips" class="form-control round-corners" />
            <input hidden asp-for="@Model.CurrentNumberOfNearlyExpiredPies" class="form-control round-corners" />
            <input hidden asp-for="@Model.CurrentNumberOfPies" class="form-control round-corners" />
            <div class="col-xl-12 row modal-header">
                <div class="col-xl-3"></div>
                <div class="col-xl-3">Current Basket</div>
                <div class="col-xl-3"></div>
                <div class="col-xl-3">Total Price</div>
            </div>
            <div class="col-xl-12 row">
                <div class="col-xl-3">
                    Summary
                </div>
                <div class="col-xl-3">
                    Numer of Chips @(Model.CurrentNumberOfChips)<br />
                    Number of Pies @(Model.CurrentNumberOfNearlyExpiredPies + Model.CurrentNumberOfPies)
                </div>
                <div class="col-xl-3">
                    <input asp-for=TotalPrice hidden />
                    Total Price: <br />
                    £@(Model.TotalPrice.ToString("F"))
                </div>
            </div>



        </form>
        

    </div>
